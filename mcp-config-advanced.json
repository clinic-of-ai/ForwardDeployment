{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--headless=false",
        "--isolated=true",
        "--logFile=chrome-devtools.log"
      ]
    },
    "firecrawl": {
      "command": "npx",
      "args": ["firecrawl-mcp-server"],
      "env": {
        "FIRECRAWL_API_KEY": "your_firecrawl_api_key_here"
      }
    }
  }
}
